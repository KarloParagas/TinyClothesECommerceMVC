@model Clothing

@{
    ViewData["Title"] = "Add new Clothing product";
}

<div class="text-center">
    <h1>Add new clothing</h1>
</div>

<div class="text-center">
    <form method="post">
        <label asp-for="Size"></label>
        <input asp-for="Size" />
        <span asp-validation-for="Size"></span>
        <br />

        <label asp-for="Type"></label>
        <input asp-for="Type" />
        <span asp-validation-for="Type"></span>
        <br />

        <label asp-for="Color"></label>
        <input asp-for="Color" />
        <span asp-validation-for="Color"></span>
        <br />

        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
        <br />

        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
        <br />

        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
        <br />

        <input type="submit" value="Add Clothing" />
    </form>
</div>

@section Scripts
{
    @* This prevents the page from refreshing whenever it needs to show a validation error message. *@

    <partial name="_ValidationScriptsPartial" />


    @*
                    These scripts are included in the partial view above
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    *@
}

