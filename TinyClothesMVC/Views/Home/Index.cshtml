@{
    ViewData["Title"] = "Welcome to Tiny Clothes";
}

<div class="text-center jumbotron">
    <h1>Tiny Clothes</h1>
    <p>Tiny clothes for tiny things, but not babies.</p>
</div>

<div class=" row">
        <div class="offset-sm-0 col-md-3 col-sm-6">
        <div class="" style="width: 18rem;">
            <img src="~/Images/DogImage.jpg" class="card-img-top" alt="Dog wearing swimming goggles" />
            <div class="card-body">
                <h5 class="card-title text-center">Our products</h5>
                <p class="card-text">
                    We sell tiny clothes for your pets and stuffed animals. These are NOT baby clothes!
                </p>
            </div>
        </div>
    </div>
    <div class="offset-sm-1 card border-primary mb-3" style="max-width: 15rem;">
        <div class="card-header text-center">Note</div>
        <div class="card-body">
            We do not accept returns or give refunds at this time. 
            <br /><br />
            We do not guarantee your baby will/won't be allergic to the clothes.
        </div>
    </div>
    <div class="offset-md-1 offset-sm-3 col-md-3 col-sm-6">
        <div class="card" style="width: 16rem;">
            <div class="card-header">
                Top-Sellers
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Doggy shoes</li>
                <li class="list-group-item">Doggy hat umbrella</li>
                <li class="list-group-item">Doggy avaiators</li>
            </ul>
        </div>
    </div>
</div>


